package com.alyssanicoll.view {	import com.alyssanicoll.events.ScrollBarEvent;		import flash.display.*;	import flash.display.MovieClip;	import flash.events.*;			public class ScrollBox extends Sprite {			private var _dest:Number;		private var _prc:Number;		private var _mask:Sprite;		private var _holder:Sprite;		private const MASK_HEIGHT:Number = 300;				public function ScrollBox():void {			_holder = new Sprite();			super.addChild(_holder);			_mask = new Sprite();			_mask.graphics.beginFill(0x00ff00);			_mask.graphics.drawRect(0,0,940,520);			_mask.graphics.endFill();			super.addChild(_mask);			this.mask = _mask;//			visibleHeight += this.y;		}				public function set prc(sp:Number):void {			_prc = sp;			_dest = -_prc*(_holder.height-_mask.height - 660);			this.addEventListener(Event.ENTER_FRAME, goScroll);		}				private function goScroll(e:Event):void {			var dist:Number = (_holder.y-_dest);						if(Math.abs(dist) > 1){
				_holder.y -= dist/12;			}else{				this.removeEventListener(Event.ENTER_FRAME, goScroll);				_holder.y = _dest;			}		}		public override function addChild(child:DisplayObject):DisplayObject{			_holder.addChild(child);			return child;		}		public override function removeChildren(beginIndex:int=0, endIndex:int=int.MAX_VALUE):void{			_holder.removeChildren(beginIndex, endIndex);		}	}}